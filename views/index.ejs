<html>
  <head>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous"
    />
    <title>AlgoFocus User Form</title>
  </head>
  <body>
    <div class="container">
      <h1 class="form-title m-2">AlgoFocus User Form</h1>
      <form class="form-group" id="algo-form" method="POST" action="/api/algo">
        <input
          class="form-control m-2 "
          placeholder="Enter Name"
          type="text"
          name="name"
        />
        <input
          class="form-control m-2 "
          placeholder="Enter Email"
          type="email"
          name="email"
        />
        <input
          class="form-control m-2 "
          placeholder="Enter Date of Birth"
          type="date"
          name="dob"
        />
        <input
          class="form-control m-2 "
          placeholder="Enter Phone Number"
          type="number"
          name="phone"
        />
        <input
          class="form-control m-2 btn btn-primary"
          type="submit"
          value="submit"
        />
      </form>
    </div>
  </body>
</html>
